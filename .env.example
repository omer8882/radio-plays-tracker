# Global environment defaults for docker-compose

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me
POSTGRES_DB=radio_plays
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Application ports
API_PORT=8080
FRONTEND_PORT=3000

# Timezone applied to containers
TZ=Asia/Jerusalem

# Spotify credentials for the recognizer worker
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Frontend build-time API base URL when running via docker-compose
FRONTEND_API_BASE_URL=http://api:8080

# Optional public domain for CORS. Override or add more entries via service env.
CORS_ALLOWED_ORIGIN=https://mahushma.com

# Cloudflared configuration directory (bind mounted into the container)
CLOUDFLARED_CONFIG_DIR=./ops/cloudflared

# Optional Cloudflare tunnel token (enable with `--profile tunnel`)
# CLOUDFLARED_TUNNEL_TOKEN=
